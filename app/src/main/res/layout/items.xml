<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_button"
    android:id="@+id/relative_layout"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_of_stu"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/tv_item_layout_name_of_the_student"
        android:textSize="@dimen/tv_item_layout_name_of_student_textSize"
        android:textColor="@color/colorGreen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_class_of_stu"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/tv_item_layout_class_of_student"
        android:textSize="@dimen/tv_item_layout_class_of_student_textSize"
        android:textColor="@color/colorGreen"
        android:layout_below="@id/tv_name_of_stu"/>

</RelativeLayout>